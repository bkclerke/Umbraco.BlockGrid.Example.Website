@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>

<div class="card @(Model.ColumnSpan == 6 ? "--medium" : null)">

    <div class="card-media">
        @{
            var typedMediaPickerSingle = Model.Content.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("image");
            if (typedMediaPickerSingle != null)
            {
                <img src="@typedMediaPickerSingle.MediaUrl()@(Model.ColumnSpan == 6 ? "?width=720" : "?width=360")" style="object-fit:cover; width:100%; height:100%;"/>
            } else {
                <p>Missing image</p>
            }
        }
    </div>
    <div class="card-content">
        <h4>@Model.Content.Value("headline")</h4>
        <div>@Model.Content.Value("richText")</div>
    </div>

</div>